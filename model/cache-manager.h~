#include "ns3/type-name.h"
#include "ns3/type-id.h"

#include <stdint.h>

namespace ns3{
namespace oicn{

class CacheManager
{
	
public:
	
 TypeId GetTypeId (void);

 CacheManager ();


 virtual CacheManger::~CacheManager();


 inline void SetHostAddress (uint32_t HostAddress);


 inline uint32_t GetHostAddress ();


 bool SetEntry (Ptr<Packet> packet1, uint8_t Name, Ipv4Header ipheader);


 void InformICNManagerAboutEvict (uint32_t HostAddress, uint8_t Name);


 void InformICNManagerAboutInsert (uint32_t HostAddress, uint8_t Name);

